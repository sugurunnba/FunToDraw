<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">

      <div>
        <i class="fa fa-history"></i><%= link_to "戻る", admin_news_path(@new) %>
      </div>

      <%= render 'layouts/error_messages', messages: @new %>

      <div class="card-body">
        <h3 class="mt-1 mb-3">お知らせ編集</h3>
        <%= form_with model: @new, url: admin_news_path(@new), local:true do |f| %>

        <div class="form-group">
          <%= f.label :news_image, "お知らせ写真(上書きします)", :class => "form-label" %>
          <%= f.attachment_field :news_image, autocomplete: "news_image" %>
          <%= attachment_image_tag @new, :news_image, :fill, 200, 200 %>
        </div>

        <div class="form-group">
          <%= f.label :title, "お知らせタイトル", :class => "form-label" %>
          <%= f.text_field :title, autocomplete: "title", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :message, "お知らせ本文", :class => "form-label" %>
          <%= f.text_area :message, autocomplete: "message", :class => "form-control", :style => "height: 200px;" %>
        </div>

        <div class="actions">
          <%= f.submit "更新する", :class => "btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>