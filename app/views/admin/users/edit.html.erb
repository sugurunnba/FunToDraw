<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">
      <div class="card-body">

        <div>
          <i class="fa fa-history"></i><%= link_to "戻る", admin_user_path(@user) %>
        </div>
<br>
        <%= render 'layouts/error_messages', messages: @user %>

        <h3 class="mt-1 mb-3 text-center"><%= @user.name %>さんのアカウント修正</h3>

        <%= form_with model: @user, url: admin_user_path(@user), local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, "ニックネーム", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.text_field :name, autocomplete: "name", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :user_image, "ユーザー写真", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.attachment_field :user_image, autocomplete: "user_image", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "自己紹介", :class => "form-label" %>
          <%= f.text_field :introduction, autocomplete: "introduction", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.email_field :email, autocomplete: "email", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.radio_button :user_status, false, checked: true %>
          <%= f.label :user_status, "有効" %>
          <%= f.radio_button :user_status, true %>
          <%= f.label :user_status, "退会済み" %>
        </div>

        <div class="actions">
          <%= f.submit "更新する", :class => "btn btn-primary btn-block" %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>