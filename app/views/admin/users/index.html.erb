<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table border="1">
        <thead>
          <tr>
            <h3 class="text-center">ユーザー一覧</h3>
          </tr>
<br>
          <!--<tr>-->
          <!--  <!%= link_to leave_admin_users_path do %>-->
          <!--    退会済みユーザー一覧へ-->
          <!--  <!% end %>-->
          <!--</tr>-->
          <tr>
            <td>ユーザーID</td>
            <td>ユーザー名</td>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <% if user.user_status == false %>
          <tbody>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>