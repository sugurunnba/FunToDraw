<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table border="1">
        <thead>
          <tr>
            <h5 class="text-center" style="color: limegreen"><%= flash[:success] %></h5>
          </tr>
          <tr>
            <h3 class="text-center">イラスト一覧</h3>
          </tr>
<br>
          <tr>
            <%= link_to "イラストツイートする", new_user_picture_path %>
          </tr>
          <tr>
            <td>更新日</td>
            <td>イラストタイトル</td>
          </tr>
        </thead>
        <% @pictures.each do |picture| %>
        <tbody>
          <tr>
            <td><%= picture.created_at.strftime("%Y年%m月%d日") %>更新</td>
            <td>
              <%= link_to user_picture_path(picture) do %>
                <%= picture.title %>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>