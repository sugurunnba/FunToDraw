<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table border="1">
        <thead>
          <tr>
            <i class="fa fa-history"></i><%= link_to "戻る", pictures_path %>
          </tr>
          <tr>
            <h5 class="message-center" style="color: limegreen"><%= flash[:notice] %></h5>
          </tr>
          <tr>
            <th>お知らせタイトル</th>
            <td><%= @picture.title %></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>イラスト写真</th>
            <td>イラスト写真</td>
          </tr>
          <tr>
            <th>お知らせ本文</th>
            <td><%= simple_format(@picture.message) %></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= link_to "編集する", edit_picture_path(@picture), :class => "btn btn-primary" %>
              <%= link_to "削除する", picture_path(@picture), method: :delete, :class => "btn btn-primary" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>