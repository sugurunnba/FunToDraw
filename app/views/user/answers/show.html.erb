<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table border="1">
        <thead>
          <tr>
            <i class="fa fa-history"></i><%= link_to "戻る", question_path(@question) %>
          </tr>
          <tr>
            <h5 class="message-center" style="color: limegreen"><%= flash[:notice] %></h5>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>回答写真</th>
            <td><%= attachment_image_tag @answer, :answer_image_id, :fill, 60, 60 %></td>
          </tr>
          <tr>
            <th>回答本文</th>
            <td><%= simple_format(@answer.message) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>